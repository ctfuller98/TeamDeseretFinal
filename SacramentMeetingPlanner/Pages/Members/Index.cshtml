@page
@model SacramentMeetingPlanner.Pages.Members.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="w-100 d-flex justify-content-between align-items-center">
<h1 class="mt-0">Deseret Ward</h1>
<a class="btn btn-success my-3" asp-page="/Meetings/Create"><i class="bi-plus-lg"></i> Add New Member</a>
</div>
<h4>Members</h4>


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].MemberTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Member)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MemberTitle)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID" class="text-success">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID" class="text-primary">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID" class="text-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
